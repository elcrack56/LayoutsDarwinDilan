<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsDarwinDilan.PaginaAbsoluteLayout"
             Title="PaginaAbsoluteLayout">
    <AbsoluteLayout>
        <ScrollView 
            AbsoluteLayout.LayoutBounds="0, 0, 1, 0.9"
            AbsoluteLayout.LayoutFlags="All">
            <StackLayout Padding="20">
                <Label Text="Contenido desplazable" 
                       FontSize="Large" 
                       HorizontalOptions="Center" />
                
                <BoxView HeightRequest="1000" 
                         Color="BlueViolet" />
            </StackLayout>
        </ScrollView>

        <Button Text="Ir a GridLayout"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="OnButtonClicked"
                AbsoluteLayout.LayoutBounds="1, 1, 200, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>
